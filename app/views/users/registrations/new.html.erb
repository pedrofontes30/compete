<div class="container">
  <div class="col-6 offset-3 px-5 py-3 card-dark shadow rounded-lg mt-5">


    <h2 class="text-center mb-3">Competitor sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, placeholder: "First name", label: false %>
        <%= f.input :last_name, required: true, placeholder: "Last name", label: false  %>
        <%= f.input :date_of_birth, required: true, placeholder: "Date of birth", label: false, start_year: 1900  %>
        <%= f.input :nationality, required: true, placeholder: "Nationality", label: false  %>
        <%= f.input :gender, required: true, placeholder: "Gender", label: false  %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, placeholder: "Email", label: false %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, placeholder: "Password", label: false %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" }, placeholder: "Confirm password", label: false %>
      </div>

      <div class="form-actions d-flex flex-column justify-content-center">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100 mb-3' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "text-center" %>
      </div>
    <% end %>


  </div>
</div>
