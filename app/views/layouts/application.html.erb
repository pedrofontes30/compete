    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <% unless controller_name == 'pages' && action_name == 'home' %>
        <div class="container mt-5 footer-height">
    <% else %>
        <div>
    <% end %>
    <%= yield %>
    </div>


      <div class="footer">
        <div class="footer-links">
          <a href="#"><i style='font-size: 35px;' class="fab fa-instagram"></i></a>
          <a href="#"><i style='font-size: 35px;' class="fab fa-facebook"></i></a>
          <a href="#"><i style='font-size: 35px;' class="fab fa-twitter"></i></a>
        </div>
        <div class="footer-copyright">
            <!-- COMPETE Â· ALL RIGHTS RESERVED -->
           <%= image_tag asset_path('compete_white.png'), style: 'width: auto; height: 45px;' %>
        </div>
      </div>

  </body>
</html>
