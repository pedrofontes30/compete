<%= simple_form_for [:federation, competition] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <div class="d-flex w-100">
    <%= f.input :date, html5: true %>
    <%= f.input :registration_deadline, html5: true %>
  </div>
  <%= f.input :description %>
  <%= f.input :prize %>
  <%= f.input :registration_price %>
  <fieldset class='mb-3'>
    <%= f.simple_fields_for :competition_divisions do |competition_divisions_form| %>
              <%= render "competition_division_fields", f: competition_divisions_form %>
          <% end %>
          <%= link_to_add_fields "Add Division", f, :competition_divisions %>
  </fieldset>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <% if competition.id %>
    <%= link_to "Delete competition", federation_competition_path(competition), class: 'btn btn-danger', data: {confirm: 'Are you sure?'}, method: :delete %>
  <% end %>
<% end %>


