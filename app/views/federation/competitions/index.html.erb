<div class="container mt-5 p-4 ">
  <div class="row card-dark rounded-lg p-4 mb-4 shadow">
    <div class="col-6 d-flex align-items-center">
      <% if current_federation.photo.attached? %>
        <%= cl_image_tag(current_federation.photo.key, class: "avatar-large mr-4")%>
      <% else %>
        <div class='avatar-large mr-4' style='background-color: grey;'></div>
      <% end %>
      <h2><strong>Dashboard</strong></h2>
    </div>
    <div class="col-6 d-flex justify-content-end align-items-center">
       <%= link_to "Create", new_federation_competition_path, class: 'btn btn-primary' %>
    </div>
   </div>
    <div class="row justify-content-around card-dark rounded-lg p-4 shadow">
    <div class="slider">
      <div class="d-flex justify-content-center">
        <% @competitions.each do |competition| %>
            <%= link_to competition_path(competition) do  %>
              <div style='position:relative; width: 400px;' class='card-light grow rounded-lg shadow m-3 p-3 d-flex justify-content-between'>
                <div class='mb-3'>
                  <h3 style='letter-spacing: 2px;'><strong><%= competition.name.upcase %></strong></h3>
                  <h5><%= competition.date.strftime("%d/%m/%Y") %> at <%= competition.address.capitalize %></h5>
                </div>
                <div class='d-flex flex-column justify-content-between'>
                  <h5 style=" white-space: nowrap; overflow: hidden;"><strong>$<%= competition.prize %> <%= icon('fas', 'trophy') %></strong></h5>
                </div>
                <% if Date.today > competition.registration_deadline %>
                    <p style='position:absolute; bottom:0px; right:0px; background-color: #DA394B; border-radius: 6px 0 6px 0;' class='px-2 py-1 m-0'><%= competition.registration_deadline.strftime("%d/%m/%Y") %></p>
                <% else %>
                    <p style='position:absolute; bottom:0px; right:0px; background-color: #4AC141; border-radius: 6px 0 6px 0;' class='px-2 py-1 m-0'><%= competition.registration_deadline.strftime("%d/%m/%Y") %></p>
                <% end %>              </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


