<div class="container mt-5 p-4 ">
  <div class="row card-dark rounded-lg p-4 mb-4 shadow">
    <div class="col-6 d-flex align-items-center">
      <% if current_federation.photo.attached? %>
        <%= cl_image_tag(current_federation.photo.key, class: "avatar-large mr-4")%>
      <% else %>
        <div class='avatar-large mr-4' style='background-color: grey;'></div>
      <% end %>
      <h2><strong>Dashboard</strong></h2>
    </div>
    <div class="col-6 d-flex justify-content-end align-items-center">
       <%= link_to "Create a competition", new_federation_competition_path, class: 'btn btn-primary' %>
    </div>
   </div>
    <div class="row justify-content-around card-dark rounded-lg p-4 shadow">
    <div class="slider">
    <div class="d-flex justify-content-center">
      <% @competitions.each do |competition| %>

       <%= render "competitions/competition_card", competition: competition  %>

     <% end %>
   </div>
 </div>
  </div>
</div>


