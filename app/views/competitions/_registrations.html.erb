<!-- Registration Modal -->

<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="registrationModalLabel">Register to <%= @competition.name %> for $<%= @competition.registration_price %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
      <%= simple_form_for [@competition, @registration] do |f| %>
      <%= f.input :competition_division_id, collection: @divisions, label_method: :select_label %>
        <div class="modal-footer mt-3">
         <%= f.submit 'Confirm registration and pay', class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
